@AFTER RUN_USERADD
ASSERT_TRUE USER_EXISTS 'mario'
ASSERT_TRUE FILE_EXISTS '/home/mario/.profile'

@BEFORE COPY_WORDS
ASSERT_FALSE FILE_EXISTS '/usr/local/tomcat/webapps/words'

@AFTER COPY_WORDS
ASSERT_TRUE FILE_EXISTS '/usr/local/tomcat/webapps/words'

@BEFORE USER_MARIO
ASSERT_TRUE CURRENT_USER_IS 'root'

@AFTER USER_MARIO
ASSERT_TRUE CURRENT_USER_IS 'mario'

@AFTER RUN_BASH
ASSERT_TRUE CONTAINS 'bar' '/tmp/foo.txt'

@BEFORE RUN_APT
ASSERT_FALSE IS_INSTALLED 'vim'

@AFTER RUN_APT
ASSERT_TRUE IS_INSTALLED 'vim'

